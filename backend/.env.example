# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
# For Railway/Render: DATABASE_URL is auto-set by the platform
# If DATABASE_URL is not available, these individual variables will be used
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ace1_development
DB_USER=ace1_user
DB_PASSWORD=your_database_password_here
# DATABASE_URL=mysql://user:password@host:port/database (auto-set by Railway/Render)

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret_key_here_min_32_characters
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (Optional - for session storage)
# For Railway/Render: REDIS_URL is auto-set if you add Redis service
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://default:password@host:port (auto-set by Railway/Render)

# Paytm Configuration
PAYTM_MERCHANT_ID=your_merchant_id
PAYTM_MERCHANT_KEY=your_merchant_key
PAYTM_WEBSITE=WEBSTAGING
# For production, change to: PAYTM_WEBSITE=WEBPROD
PAYTM_INDUSTRY_TYPE=Retail
PAYTM_CHANNEL_ID=WEB
PAYTM_CALLBACK_URL=http://localhost:3000/api/payment/callback
# For production: https://your-backend-url.railway.app/api/payment/callback

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@ace1.in

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_LOGIN_MAX=5

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:8080
# For production: https://yourdomain.com

# Logging
LOG_LEVEL=debug
